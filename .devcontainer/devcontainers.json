{
  "name": "AI Agents Codespace",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-azurefunctions",
        "GitHub.copilot"
      ]
    }
  },
  "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt || pip install autogen-agentchat autogen-core autogen-ext",
  "remoteUser": "vscode",
  "mounts": [
    "source=${localWorkspaceFolder}/.env,target=/workspace/.env,type=bind,consistency=cached"
  ],
  "containerEnv": {
    "PYTHONPATH": "/workspace"
  }
}
